<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Perfil</title>
    <% include cabeceras/cabecera %>
  </head>
 <body>
    <div class="container"><div class="col-sm-6 mx-auto">
        <div class="card mt-5">
          <div class="card-body">
              <header class="text-center">
                <h1>Perfil</h1>
              </header>
      <hr>
              <div class="container">
                <div class="col-sm-10">
                  <div class="card">
                    <div class="card-body">
                      <h3 class="card-title"><span class="fa fa-user"></span> Usuario</h3>
                      <p>
                        <strong>Nombre</strong> : <%= user.local.nombre %> <br>
                        <strong>Apelido</strong> : <%= user.local.apellido %> <br>
                        <strong>Rut</strong> : <%= user.local.rut %> <br>
                        <strong>Tipo de Documentacion</strong> : <%= user.local.tipo_rut %> <br>
                        <strong>Fecha de Nacimiento</strong> : <%= user.local.fecha_nac %> <br>
                        <strong>Sexo</strong> : <%= user.local.sexo %> <br>
                        <strong>Banco</strong> : <%= user.local.banco %> <br>
                        <strong>Tipo de Cuenta</strong> : <%= user.local.tipo_cta %> <br>
                        <strong>Numero de Cuenta</strong> : <%= user.local.num_cta %> <br>
                        <strong>Email</strong> : <%= user.local.email %> <br>
                        <strong>Status</strong> : <%= user.local.status %> <br>
                      </p>
                      <div class="text-center">
                        <a href="/logout" class="btn btn-primary btn-sm">
                          Salir del perfil
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
    </div>
  </body>
</html>